# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
indent_size = 4
indent_style = space
trim_trailing_whitespace = true

[*.java]
max_line_length = 120
ij_java_imports_layout = java.**,|,javax.**,|,*,|,com.mojang.**,|,net.minecraft.**,|,net.fabricmc.**,|,dev.jpcode.**,|,$*

[*.{json,xml,yml}]
indent_size = 2

[*.md]
max_line_length = 80

trim_trailing_whitespace = false
